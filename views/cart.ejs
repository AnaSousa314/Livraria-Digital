<%- include('./partials/head'); %>
  <%- include('./partials/header'); %>

  <section class="cart-bg">
    <div class="shopping-cart">
        
  <div class="row">
    <div class="col-xl-12">
        <div class="section-title">
            <h2>Seus Pedidos</h2>
        </div>
    </div>
</div>

<section class="mt-5">
    <div class="cart">
        <div class="table-responsive">
            <table class="table">
               <thead class="thead-primary">
                <th scope="col" class="text-white">Produto</th>
                <th scope="col" class="text-white">Pre√ßo</th>
                <th scope="col" class="text-white">Quantidade</th>
                <th scope="col" class="text-white">Total</th>
                <th scope="col" class="text-white"></th>
               </thead>
               <tbody>

                <% data.forEach(book=>{ %> 
                <tr class="produto">
                    <td>
                        <div class="main">
                            <div class="d-flex">
                                <img src="<%= book.imgPath %> " alt="" width="75px" height="109px">
                            </div>
                            <div class="des">
                                <p><%= book.title %></p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <h6>R$ <input class="preco" value="<%= book.price %>"/></h6>
                    </td>
                    <td>
                        <div class="counter">
                            
                            <i class="fas fa-angle-down qtmenos"></i>
                                <input class="qtd" value="1"/>
                            <i class="fas fa-angle-up qtmais"></i>
                        </div>
                        
                    </td>
                    <td>
                        <h6>R$ <input type="number" step="0.01" name="tot" class="tot" value="<%= book.price * 1%>" readonly></h6>
                    </td>
                    <td>
                        <a href="/cart/delete/<%= book.cartId %> "> 
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>

                <% }) %> 
                  
            </tbody>
            </table>
        </div>
    </div>
</section>

<div class="col-lg-4 offset-lg-4">
    <div class="checkout">
        <ul>
            <li class="cart-total">Total
                <span>R$ <input name="total" id="total" value="0 " readonly></span>
            </li>
        </ul>
        <a href="/payment" class="proceed-btn">Seguir para o caixa</a>
    </div>
</div>

  <%- include('./partials/footer'); %>

  <script src="/javascripts/main.js"></script>
</body>

</html>